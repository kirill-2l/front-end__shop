mixin mainSubNavLink(link, text)
	li.catalog-nav__item
		a(href=link).catalog-nav__link
			span.catalog-nav__text=text
			+icon('chevron-right', 'catalog-nav__icon')

mixin informNavLink(link, text)
	li.inform-nav__item
		a(href=link).inform-nav__link=text

.header__mobile
	.container
		.mobile-menu
			.mobile-menu__toggle
				.mobile-menu__sandwich.sandwich
					.sandwich__line.sandwich__line--top
					.sandwich__line.sandwich__line--middle
					.sandwich__line.sandwich__line--bottom
				span.mobile-menu__title Каталог товаров
			.mobile-menu__content
				.mobile-menu__header
					span.mobile-menu__title Меню
					.mobile-menu__close
						+icon('close', 'mobile-menu__close-icon')
				.mobile-menu__body
					nav.catalog-nav
						ul.catalog-nav__list
							each text in ['Самокаты','Беговелы','Велосипеды','Ролики','Скейты','Батуты','Аксессуары и запчасти','Еще']
								+mainSubNavLink('',text)
					nav.inform-nav.inform-nav--col
						ul.inform-nav__list
							+informNavLink('1', 'О компании')
							+informNavLink('1', 'Доставка и оплата')
							+informNavLink('1', 'Акции')
							+informNavLink('1', 'Оптовикам')
							+informNavLink('1', 'Новости')
							+informNavLink('1', 'Гарантии')
							+informNavLink('1', 'Контакты')
		.mobile__logo.logo
			img(src="static/images/general/logo.svg", alt="logo").logo__img
		.search
			form.search__form
				.search__input-wrapper
					input(type="text" placeholder="Я хочу купить...").search__input
					.search__clear
						+icon('close','search__clear-icon')
				input(type="submit" value="Найти").search__btn
		nav.mobile-user-nav
			ul.mobile-user-nav__list
				li.mobile-user-nav__item
					a(href="").mobile-user-nav__link
						+icon('search', 'mobile-user-nav__icon')
				li.mobile-user-nav__item
					a(href="").mobile-user-nav__link
						+icon('user', 'mobile-user-nav__icon')
				li.mobile-user-nav__item
					a(href="").mobile-user-nav__link
						+icon('basket', 'mobile-user-nav__icon')
