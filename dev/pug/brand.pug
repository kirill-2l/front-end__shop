extends template/main

block variables
	- var title = 'Страница Бренда'
	- var pageClass = 'brand-page'

block content
	.breadcrumbs
		.container
			ul.breadcrumbs__list
				li.breadcrumbs__item
					a(href="./index.html").breadcrumbs__link Главная
				li.breadcrumbs__item
					span.breadcrumbs__link Бренды
				li.breadcrumbs__item
					span.breadcrumbs__current Puky

	section.s-brand.s-border-bottom
		.container
			h1.title-page Puky
			include pages/brand/info
	section.s-slider-1.s-border-bottom
		.container
			include pages/brand/slider-1
	section.s-slider-2
		.container
			include pages/brand/slider-2
