section.s-category-slider
	.container
		.category-slider
			.category-slider__header
				.category-slider__title Официальные дилеры Micro, PUKY, Hudora, Globber
			.category-slider__body
				.js-category-slider
					each slider in [{icon: 'tag',name: 'Найдёте дешевле – мы сделаем скидку'},{icon: 'fast-delivery',name: 'Доставка по Москве день в день, на следующий день, через день'},{icon: 'recommended',name: 'Расширенная европейская гарантия от производителя'},{icon: 'medal',name: 'Официальный сервисный центр'},{icon: 'customer-service',name: 'Профессиональная консультация от продавцов'},{icon: 'map',name: 'Доставка по всей России'}]
						.category-slider__item
							+icon(slider.icon, 'category-slider__icon')
							span.category-slider__text=slider.name
			.category-slider__dots
