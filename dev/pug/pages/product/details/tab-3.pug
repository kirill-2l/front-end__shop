mixin reviewRow(label, value)
	.review__row
		span.review__label=label
		span.review__key=value


.reviews
	.reviews__header
		h2.title-section Отзывы
		.product-rating
			.product-rating__stars
				+icon('star','product-rating__icon product-rating__icon--active')
				+icon('star','product-rating__icon product-rating__icon--active')
				+icon('star','product-rating__icon product-rating__icon--active')
				+icon('star','product-rating__icon product-rating__icon--active')
				+icon('star','product-rating__icon')
		span.product-text 4.0 балла на основе 3 оценок
		a(href="").btn.btn--bg-orange.review__add.btn--inline Оставить отзыв
	.reviews__body
		.review
			.review__header
				.review-author__photo-wrapper
					img(src="https://picsum.photos/id/395/70/70?grayscale", alt="фото автора отзыва").review-author__photo
				.review-author__info
					.review-author__name Диана старикова
					.review-author__mark Оценка: 5
			.review__body
				+reviewRow('Достоинства', 'Хороший беговел')
				+reviewRow('Недостатки', 'нет')
				+reviewRow('Комментарий', 'У меня два малчика и оба в восторге от беговелов. Безопасный и устойчивый.')
		.review
			.review__header
				.review-author__photo-wrapper
					span.review-author__photo-text E
				.review-author__info
					.review-author__name Елена
					.review-author__mark Оценка: 3
			.review__body
				+reviewRow('Достоинства', 'Неплохой беговел')
				+reviewRow('Недостатки', 'Сломался через месяц')
				+reviewRow('Комментарий', 'Пришлось сдать в сервисный центр.')
		.review
			.review__header
				.review-author__photo-wrapper
					span.review-author__photo-text П
				.review-author__info
					.review-author__name Павел
					.review-author__mark Оценка: 4
			.review__body
				+reviewRow('Достоинства', 'Нормальный детский велик')
				+reviewRow('Недостатки', 'Не обнаружил')
				+reviewRow('Комментарий', 'Довольно устойчивый и приятно выглядящий. Без излишеств.')
